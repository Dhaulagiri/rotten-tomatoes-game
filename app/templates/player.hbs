<h3 class='text-center'>Player {{name}}</h3>
<div class="row text-center">
	<button {{action "deletePlayer" this}} class="btn btn-primary btn-lg">Delete Player</button>
</div>

<div class="row">
	<div class="col-md-2">
		<h4>Games</h4>
		{{#each this.games}}
			<p>{{#link-to 'player.game' this}}{{id}}{{/link-to}}</p>
		{{/each}}
	</div>

	<div class="col-md-10">
		{{outlet}}
	</div>
</div>
