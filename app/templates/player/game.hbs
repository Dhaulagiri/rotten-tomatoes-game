<div class="row">
	<div class="col-md-6"
		<h4>Movies</h4>
		{{#each this.movies}}
			<div class="media">
				<div class="media-body">
			    <h4 class="media-heading">{{title}} - {{year}}</h4>
			    	{{synopsis}}
			  </div>
			  {{#link-to 'movies.show' this classNames="media-right media-middle"}}
			    	<img {{bind-attr src=thumbnail alt=title}}>
			  {{/link-to}}  
			</div>
		{{/each}}
	</div>
	<div class="col-md-6">
		<h4>Opponents</h4>
	</div>

</div>