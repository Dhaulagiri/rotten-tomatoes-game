<h3>Game {{name}}<h3>

<p><button type="button" class="btn btn-primary" {{action "startGame" this}}>Start Game</button></p>

<h4>Players</h4>
{{#each this.players}}
	<p>{{#link-to 'player' this}}{{name}}{{/link-to}}</p>
{{/each}}

<h4>Movies</h4>
{{#each this.movies}}
	<p>{{#link-to 'movies.show' this}}{{title}}{{/link-to}}</p>
{{/each}}
